<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
  Email: <%= text_input f, :email, placeholder: "Email" %><br />
  Password: <%= password_input f, :password, placeholder: "Password" %><br />
  <%= submit "Sign in" %>
<% end %>
